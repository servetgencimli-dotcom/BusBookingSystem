<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="controller.ViewBookingsController"
      spacing="20" styleClass="root">
    <padding><Insets top="30" right="30" bottom="30" left="30"/></padding>
    <Label fx:id="titleLabel" text="BOOKINGS" styleClass="title">
        <font><Font name="System Bold" size="24"/></font>
    </Label>
    <TableView fx:id="bookingsTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="passengerCol" text="Passenger" prefWidth="150"/>
            <TableColumn fx:id="routeCol" text="Route" prefWidth="200"/>
            <TableColumn fx:id="dateCol" text="Date" prefWidth="120"/>
            <TableColumn fx:id="intervalCol" text="Interval" prefWidth="120"/>
            <TableColumn fx:id="priceCol" text="Price (AZN)" prefWidth="100"/>
        </columns>
    </TableView>
    <Button fx:id="backBtn" text="Back" onAction="#handleBack"
            prefWidth="120" prefHeight="40" styleClass="back-button"/>
</VBox>

        <!-- ==================== UpdateProfile.fxml ==================== -->
        <?xml version="1.0" encoding="UTF-8"?>
        <?import javafx.geometry.Insets?>
        <?import javafx.scene.control.*?>
        <?import javafx.scene.layout.*?>
        <?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="project.controllers.UpdateProfileController"
      alignment="CENTER" spacing="20" styleClass="root">
<padding><Insets top="30" right="50" bottom="30" left="50"/></padding>
<Label text="UPDATE PROFILE" styleClass="title">
    <font><Font name="System Bold" size="28"/></font>
</Label>
<GridPane hgap="10" vgap="15" alignment="CENTER" maxWidth="500">
    <Label text="Name:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
    <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="0" prefWidth="250"/>

    <Label text="Gender (K/Q/U):" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <TextField fx:id="genderField" GridPane.columnIndex="1" GridPane.rowIndex="1" prefWidth="250"/>

    <Label text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <PasswordField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="2" prefWidth="250"/>

    <Label text="Card Number:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    <TextField fx:id="cardField" GridPane.columnIndex="1" GridPane.rowIndex="3" prefWidth="250"/>

    <Label text="Expiry (MM/YY):" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
    <TextField fx:id="expiryField" GridPane.columnIndex="1" GridPane.rowIndex="4" prefWidth="250"/>

    <Label text="CVC:" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
    <TextField fx:id="cvcField" GridPane.columnIndex="1" GridPane.rowIndex="5" prefWidth="250"/>
</GridPane>
<Label fx:id="messageLabel" textFill="green"/>
<HBox spacing="15" alignment="CENTER">
    <Button fx:id="saveBtn" text="Save" onAction="#handleSave"
            prefWidth="120" prefHeight="40" styleClass="menu-button"/>
    <Button fx:id="backBtn" text="Back" onAction="#handleBack"
            prefWidth="120" prefHeight="40" styleClass="back-button"/>
</HBox>
</VBox>